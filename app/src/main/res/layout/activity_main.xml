<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:baselineAligned="false">

    <!-- Left side for Team 1 -->
    <LinearLayout
        android:id="@+id/team1Layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@android:color/holo_blue_dark">

        <!-- Team 1 Name -->
        <TextView
            android:id="@+id/team1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team1DefaultName"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_weight="0.1"
            android:paddingTop="20dp"
            android:textColor="@color/black" />

        <!-- Team 1 Score -->
        <TextView
            android:id="@+id/team1Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="150sp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1">
            <ImageView
                android:id="@+id/resetScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/reset"
                android:layout_weight="1"
                android:contentDescription="Reset the score" />
            <ImageView
                android:id="@+id/announceScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="Announce the score"
                android:src="@drawable/score" />
            <ImageView
                android:id="@+id/swapScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/swap"
                android:layout_weight="1"
                android:contentDescription="Swap the scores of the teams" />
            <TextView
                android:id="@+id/team1MinusScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-1"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

    <!-- Right side for Team 2 -->
    <LinearLayout
        android:id="@+id/team2Layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@android:color/holo_purple">

        <!-- Team 2 Name -->
        <TextView
            android:id="@+id/team2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team2DefaultName"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_weight="0.1"
            android:paddingTop="20dp"
            android:textColor="@color/black" />

        <!-- Team 2 Score -->
        <TextView
            android:id="@+id/team2Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="150sp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1">
            <TextView
                android:id="@+id/team2MinusScore"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-1"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
            <ImageView
                android:id="@+id/whistle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/whistle"
                android:layout_weight="1"
                android:contentDescription="Sound a whistle" />
            <ImageView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/settings"
                android:layout_weight="1"
                android:contentDescription="Settings" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>