<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:baselineAligned="false">

    <!-- Left side for Team 1 -->
    <LinearLayout
        android:id="@+id/team1Layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@android:color/holo_blue_dark">

        <!-- Team 1 Name -->
        <EditText
            android:id="@+id/team1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time 1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_weight="0.1"
            android:paddingTop="20dp"
            android:background="@android:color/transparent"/>

        <!-- Team 1 Score -->
        <TextView
            android:id="@+id/team1Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="150sp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">
            <ImageView
                android:id="@+id/resetScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/reset"
                android:layout_alignParentStart="true"
                android:contentDescription="Reset the score" />
            <ImageView
                android:id="@+id/swapScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/swap"
                android:contentDescription="Swap the scores of the teams" />
            <TextView
                android:id="@+id/team1MinusScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="-1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </RelativeLayout>

    </LinearLayout>

    <!-- Right side for Team 2 -->
    <LinearLayout
        android:id="@+id/team2Layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@android:color/holo_purple">

        <!-- Team 2 Name -->
        <EditText
            android:id="@+id/team2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time 2"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_weight="0.1"
            android:paddingTop="20dp"
            android:background="@android:color/transparent"/>

        <!-- Team 2 Score -->
        <TextView
            android:id="@+id/team2Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="150sp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_weight="0.1">
            <TextView
                android:id="@+id/team2MinusScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/whistle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/whistle"
                android:contentDescription="Sound a whistle" />
            <ImageView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/settings"
                android:contentDescription="Settings"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>