<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Team 1 Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Team 1 Name -->
        <EditText
            android:id="@+id/team1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:paddingTop="20dp"
            android:text="Time 1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Team 1 Score -->
        <TextView
            android:id="@+id/team1Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="150sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1">

            <ImageView
                android:id="@+id/resetScore"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:contentDescription="Reset the score"
                android:src="@drawable/reset" />

            <ImageView
                android:id="@+id/swapScore"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:contentDescription="Swap the scores of the teams"
                android:rotation="90"
                android:src="@drawable/swap" />

            <TextView
                android:id="@+id/team1MinusScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:text="-1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Team 2 Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/holo_purple"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Team 2 Name -->
        <EditText
            android:id="@+id/team2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@android:color/transparent"
            android:paddingTop="20dp"
            android:text="Time 2"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Team 2 Score -->
        <TextView
            android:id="@+id/team2Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="150sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1">

            <TextView
                android:id="@+id/team2MinusScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/whistle"
                android:layout_width="wrap_content"
                android:layout_height="28sp"
                android:layout_weight="1"
                android:contentDescription="Sound a whistle"
                android:src="@drawable/whistle" />

            <ImageView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="28sp"
                android:layout_weight="1"
                android:contentDescription="Settings"
                android:src="@drawable/settings" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
